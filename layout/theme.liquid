<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <script defer src="//unpkg.com/alpinejs" defer></script>
    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <script src="{{ 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js '}}" defer></script>
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'application.js' | asset_url }}" defer></script>
  </head>
  <body class="bg-black" >
    {% section 'header' %}
      {{ content_for_layout }}
      {% section 'cart-drawer' %}
    <style>
      {{ settings.body_font | font_face }}
      :root{
        --bodyFont: "{{ settings.body_font.family }}";
        --bodyFontlight: {{ settings.body_font.weight.variants.futura_n3  }};
        --bodyFontRegular: {{ settings.body_font.weight.variants.futura_n4 }};
        --bodyFontMedium: {{ settings.body_font.weight.variants.futura_n5}};
        --bodyFontBold: {{ settings.body_font.weight.variats.futura_n7 }};
        --bodyFontSemiBold:{{ settings.body_font.weight.variants.futura_n6 }};
      }
    </style>
  </body>
</html>