<div class="m-auto">
    <div class="text-5xl md:text-9xl text-red-500 font-bold my-4"> {{ section.settings.title }}</div>
    {{ section.settings.image_with_text_image | image_url: width: 1500 | image_tag }}
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title |  capitalize  }}</p>
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}
            {% else %}
                {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a class="underline underline-offset-2 decoration-dotted font-bold hover:text-red-500  " href="{{ shop_url }}">{{ section.settings.button_label |  capitalize }}â†’</a>
    </div>
</div>
{% schema %}
{
    "name": "template 404",
    "tag": "section",
    "class": "flex item center justify-cener text-center py-7 h-screen",
    "settings": [ 
        {
            "type": "text",
            "id": "title",
            "default": "404",
            "label": "404 heading title"
        },
        {
            "type": "text",
            "id": "subtext_title",
            "default":"the page that you are looking for is not found",
            "label": "404 subtext title"
        },
        {
            "type": "text",
            "id": "button_label",
            "default":"go back to homepage",
            "label": "button label"
        },
        {
            "type": "url",
            "id": "button_url",
            "default":"go to homepage ",
            "label": "button url"
        },
        {
            "type": "image_picker",
            "id": "image_with_text_image",
            "label": "Image"
        }

        ]
}
{% endschema %}